
[fzf-tab]
checkout = git clone 'https://github.com/Aloxaf/fzf-tab' 'fzf-tab'
update = if [ $(git status --porcelain | grep -v '^\?\?' | wc -l) -gt 0 ]; then git stash && git pull --rebase && git stash pop; else git pull; fi

