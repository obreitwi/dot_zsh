
if [ -d "/fasthome/$USER" ] && [[ "$HOME" != "/fasthome/$USER" ]]; then
    ARGS=""
    if [[ -o login ]]; then
        ARGS="-l"
    fi

    PATH_ZSH="$(which zsh)"

    export OLDHOME="${HOME}"

    for envvar in $(env | grep "/wang/" | cut -d = -f 1); do
        clean_path ${envvar} "^/wang/"
    done

    export HOME="/fasthome/$USER"

    cd ${HOME}
    exec $PATH_ZSH ${ARGS}
    exit 0
fi

# vim: ft=zsh

