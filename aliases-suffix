# Suffix aliases for programs

alias -s txt=vim

if which zathura >/dev/null; then
    alias -s djvu=zathura
    alias -s pdf=zathura
fi

if command -v mpv >/dev/null; then
    alias -s avi=mpv
    alias -s mkv=mpv
    alias -s mp3=nmpvc
    alias -s mp4=mpv
    alias -s webm=mpv
elif command -v vlc >/dev/null; then
    alias -s avi=vlc
    alias -s mkv=vlc
    alias -s mp3=nvlcc
    alias -s mp4=vlc
    alias -s webm=vlc
fi

# vim: ft=zsh
